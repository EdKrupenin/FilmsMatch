<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.ImageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Строка "Порядок выдачи" -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/sorting_order_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Порядок выдачи"
        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_button"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Кнопка с выпадающим меню -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/sorting_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Случайный"
        android:icon="@drawable/ic_baseline_arrow_drop_down_24"
        app:iconGravity="textEnd"
        app:iconTint="@color/black"
        app:iconSize="24dp"
        style="@style/Widget.Material3.Button.TextButton"
        app:layout_constraintTop_toTopOf="@id/sorting_order_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/sorting_order_label"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Область с чипами -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/genre_chip_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sorting_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Кнопка "Продолжить" -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/continue_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Продолжить"
        style="Widget.Material3.Button.ContainedButton"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/genre_chip_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
